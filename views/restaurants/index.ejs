<body>
       <nav>     
            <h1 >foodlu</h1>
            <a href="/restaurants"> <h1 class="item-1 items"> RESTAURANTS</h1></a>
            <a href="/logout"> <h1 class="item-2 items">LOG-OUT</h1></a>
        </nav>
        <div class=logo> <img src="https://i.imgur.com/mngHVw7.png" alt="logo" width="150px" height="140px"> </div>
            <hr>
            <br>

            <div id="search">
                    <form action="/restaurants" method="GET">
                        <input type="text" name="search" placeholder="Search for Restaurants">
                        <button type="submit" class="in-out">GO</button>
                    </form>
                </div>
  
    <% if (user && user.isAdmin) { %>
        <div> <a href="/restaurants/new"> <button id="add">Add a new restaurant</button></a></div>
    <% } %>
    

    <main id="second-page">

        <h1 id="restaurant-head"> All Restaurants</h1><br>

        <% restaurants.forEach(function(restaurant){ %>
            <div id="restaurant-container">
                 <div>
                    <img src=" <%= restaurant.logoLink %> " height="80px" width="100px" >
                </div>
                <div>
                    <h2 class="restaurant-name">&nbsp;&nbsp;<%= restaurant.name %></h2> 
                    <hr>
                    <p>&nbsp;&nbsp;<%= restaurant.description %> </p>
                        <p>ðŸ“ž &nbsp; <a href="#"> <%= restaurant.phoneNumber%> </a></p> 
                        <p><%= restaurant.address%>,&nbsp;<%= restaurant.city%>,&nbsp;<%= restaurant.state%>&nbsp;<%= restaurant.zipCode%>
                        </p>   <a href="/restaurants/<%=restaurant._id%>"> <button class="view">View Menu </button></a> <a href="<%= restaurant.addressLink%>" target="_blank"> <button class="view">Directions</button> </a>
                        <br>
                </div>
         
            </div>
            <br>
             <br>
 
        <% }); %>
    <%
    var next = page < maxPage ? page+1 : page;
    var pre = page > 1 ? page-1 : 1;
    %>
<div class="next-prev">
        <form action="/restaurants" method="GET" class="view">
            <input type="hidden" name="page" value="<%= pre %>">
            <input type="submit" value="pre">
        </form> &nbsp;&nbsp;&nbsp;&nbsp;
    <form action="/restaurants" method="GET" class="view">
        <input type="hidden" name="page" value="<%= next %>">
        <input type="submit" value="next">
    </form>
</div>
