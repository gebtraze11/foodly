<body>
        <img src="https://i.imgur.com/LIycIDL.png" width="100px" height="100px">
       

    <a href="/">First Page</a>
    <a href="/restaurants">Restaurants</a>

    <%
        var next = page < maxPage ? page+1 : page;
        var pre = page > 1 ? page-1 : 1;
        console.log(page);
        console.log(maxPage);
    %>

    <form action="/restaurants" method="GET">
        <input type="hidden" name="page" value="<%= next %>">
        <input type="submit" value="next">
    </form>
    <form action="/restaurants" method="GET">
        <input type="hidden" name="page" value="<%= pre %>">
        <input type="submit" value="pre">
    </form>

    <a href="/logout">Logout</a>
    
    <br>
    <% if (user && user.isAdmin) { %>
        <a href="/restaurants/new">Add a new restaurant</a>
    <% } %>
    
    <br>
    <br>
   
        <div>
          <form action="/restaurants" method="GET">
            <input type="text" name="search" placeholder="Search">
         
            <button type="submit">Go!</button>
          </form>
        </div>

<h3> </h3>

    <h1>All Restaurants</h1><br>
        
        
