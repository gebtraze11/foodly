            <a href=" <%= restaurant.addressLink%> " target="_blank">
            <%= restaurant.address%>,&nbsp;<%= restaurant.city%>,&nbsp;<%= restaurant.state%>&nbsp;<%= restaurant.zipCode%>
            </a>
            <br>
            <br>
        <br>
        <br>
        <% }); %>
 
    </div>


</body>
</html>